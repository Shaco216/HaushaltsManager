<Window x:Class="HaushaltsManager.AddKategorie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaushaltsManager"
        mc:Ignorable="d"
        Title="AddKategorie" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Kategoriename:" Grid.Row="0" Grid.Column="0" />
        <TextBox x:Name="KategorieName" Grid.Row="0" Grid.Column="0" />
        <Label Content="Kategoriebeschreibung" Grid.Row="0" Grid.Column="1"/>
        <TextBox x:Name="KategorieBeschreibung" Grid.Row="0" Grid.Column="1" />
        <Button Content="Save" Click="InsertKategorie_Click" Grid.Row="1" Grid.Column="0" />
        <Button Content="Cancel" Click="Cancel_Click" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
